<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="007-create-table-audit" author="homelab">
        <createSequence sequenceName="audit_id_sequence"
                        incrementBy="5"
                        startValue="20"
        />

        <createTable tableName="audit_liquibase" schemaName="company">
            <column name="id" type="BIGINT" defaultValueSequenceNext="audit_id_sequence">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="message_audit" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>